use strict;
use warnings;
use version;
use Scalar::Util;
use List::Util;
#use List::MoreUtils;
use Getopt::Long;
use Pod::Usage;
use Data::Dumper qw/Dumper/;
use English qw/ -no_match_vars /;
use FindBin qw/$Bin/;
use Path::Class;
use App::SourceCodeStats;

our $VERSION = version->new('0.0.1');
my ($name)   = $PROGRAM_NAME =~ m{^.*/(.*?)$}mxs;

my %option = (
    out     => undef,
    verbose => 0,
    man     => 0,
    help    => 0,
    VERSION => 0,
);

main();
exit 0;

sub main {

    Getopt::Long::Configure('bundling');
    GetOptions(
        \%option,
        'out|o=s',
        'verbose|v+',
        'man',
        'help',
        'VERSION!',
    ) or pod2usage(2);

    if ( $option{'VERSION'} ) {
        print "$name Version = $VERSION\n";
        exit 1;
    }
    elsif ( $option{'man'} ) {
        pod2usage( -verbose => 2 );
    }
    elsif ( $option{'help'} ) {
        pod2usage( -verbose => 1 );
    }

    # do stuff here
    for my $path (@ARGV || ('.')) {
        my %stats = App::SourceCodeStats->new( path => dir($path) )->stats;

        simplify(\%stats) if !$option{verbose};

        my @table = tabulate(\%stats);
        display(@table);
    }

    return;
}

sub display {
    my (@table) = @_;
    my @heads = qw/
        File
        Files
        Lines
        Blank
        Simple
        Comment
        Bytes
        Net
    /;
    my @maxes = map {length $_} @heads;

    for my $row (@table) {
        my $i = 0;
        for my $col (@$row) {
            $maxes[$i] = length $col if $maxes[$i] < length $col;
            $i++;
        }
    }
    my $i = 0;
    my $fmt = join ' ', map { $i++ == 0 ? "%-${_}s" : "%${_}d" } @maxes;
    my $fmt_head = $fmt;
    $fmt_head =~ s/%(\d+)/%-$1/g;
    $fmt_head =~ s/d/s/g;
    printf "$fmt_head\n", @heads;

    for my $row (@table) {
        printf "$fmt\n", @$row;
    }
}

sub tabulate {
    my ($stats) = @_;
    my @table;
    my @total = (0) x 8;
    my $i = 0;
    my %columns = map { $_ => $i++ } qw/
        file
        files
        lines
        blank
        simple
        comment
        bytes
        net
    /;

    for my $file (sort keys %$stats ) {
        push @table, [];
        my $row = $table[-1];
        $stats->{$file} = $stats->{$file}->[0] if ref $stats->{$file} eq 'ARRAY';

        for my $col (keys %columns) {
            next if $col eq 'files' && !exists $stats->{$file}{$col};

            local $SIG{__WARN__} = sub {};
            $row->[ $columns{$col} ]
                = $col eq 'file' ? $file
                : $col eq 'net'  ? $stats->{$file}{lines} - $stats->{$file}{blank} - $stats->{$file}{simple} - $stats->{$file}{comment}
                :                  $stats->{$file}{$col} || 0;

            $total[ $columns{$col} ] += $row->[ $columns{$col} ] if $col ne 'file';
        }
        $row->[1]++;
        $total[1]++;
    }

    $total[0] = 'Total';
    push @table, \@total;

    return @table;
}

sub simplify {
    my ($stats) = @_;

    my @files = keys %$stats;

    for my $file (@files) {
        my $file_stats = delete $stats->{$file};
        for my $file_type (@$file_stats) {
            $stats->{$file_type->{type}} ||= {};
            my $type = $stats->{$file_type->{type}};

            for my $key (keys %$file_type) {
                next if $key eq 'type';
                $type->{$key} += $file_type->{$key};
            }
            $type->{files}++;
        }
    }
}

__DATA__

